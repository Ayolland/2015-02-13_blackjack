<% if @error != nil %>
<p class="error"><%= @error %></p>
<% end%>
<div class="login">
  <h1 class="casino">Login to play BlackJack:</h1>
  <form class="clickypoo" action="/verify" method="post">
    <h2>Username:</h2><input type="text" name="username"><br>
    <h2>Password:</h2><input type="password" name="password"><br><br>
    <button class='btn' type='submit' value='login'>Login</button>
  </form>
  <div class="new_user">
    <h1 class="casino">Or create a new username:</h1>
    <form class="clickypoo" action="/new_user" method="post">
      <button class='btn' type='submit' value='Create'>New User</button>
    </form>
  </div>
</div>
